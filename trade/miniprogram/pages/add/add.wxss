/* miniprogram/pages/addcomment/addcomment.wxss */
page{
  width: 100%;
  height: 100%
}

.body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

/* goods info layout */
.chooseImg{
  margin: 20rpx;
}

.click{
  width: 100%;
  height: 600rpx;
  background-color: rgb(233, 233, 233);
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center; 
}

.click .icon{
  font-size: 250rpx;
  color: rgb(203, 203, 203);
  line-height: 1;
  margin-top: -40rpx;
}

.click .text{
  color: rgb(203, 203, 203);
  line-height: 1;
}

.img{
  width: 100%;
  height: 600rpx;
}

.middle{                  
  flex: 1;        
  position: relative;
}

.scroll{              
  position: absolute; 
  top: 0;            
  bottom: 0;           
  left: 0;             
  right: 0;            
} 

.goodinfo{
  margin-left: 4vw;
  margin-right: 4vw;

}

.goodinfo textarea{
  height: 40px;
  background: #f6f6f6;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 35rpx;
}


.upload{
  margin: 30rpx;

}
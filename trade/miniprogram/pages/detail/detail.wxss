page{
  width: 100%;
  height: 100%
}

.body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

/* goods info layout */
.middle{                 
  flex: 1;         
  position: relative;
}

.scroll{              
  position: absolute; 
  top: 0;             
  bottom: 0;           
  left: 0;             
  right: 0;            
} 

.goodinfo{
  margin-left: 4vw;
  margin-right: 4vw;
  display: flex;
  flex-direction: column
}

.goodinfo .img{
  width: 90vw;
  margin-top:2vw;
  margin-left: 1vw;
}

.goodinfo view{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 35rpx;
}


.favor{
  margin: 30rpx;
}
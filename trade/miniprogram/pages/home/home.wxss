/* miniprogram/pages/home/home.wxss */
page {
  width: 100%;
  height: 100%;
}

.home {
  width: 100%;
  height: 100%;
  display: flex;         
  flex-direction: column; 
}

/* goods list layout */
.goods{                 
  flex: 1;            
  position: relative;
}

.scroll{             
  position: absolute; 
  top: 0;            
  bottom: 0;           
  left: 0;             
  right: 0;            
} 

.content{
  margin-left: 1vw;
  margin-right: 2vw;
  display: flex;
  flex-wrap: wrap;  
  justify-content: space-between; 
}

.block{
  width: 42vw; 
  margin:10px;
}

.block .img{
  width: 100%;    
  border-radius: 5px;
  border: 3px double #777
}


.block .price{
  color: rgb(12, 212, 238);
}




/* bottom navigation bar  */
.bottom{
  margin-left: 6vw;
  margin-right: 6vw;
  margin-bottom: 2vw;
  display: flex;
  justify-content: space-between; 
}

.guide-item{
  width: 12vw;
  text-align: center; 
  line-height: 1;  
}

.bottom .image{
  width: 70%;
}

.itemname{
  font-size: 14px;
}

.itemname1{
  color: rgb(12, 212, 238);
  font-size: 14px;
}